<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/main_screen_content_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecciona_el_servicio_que_buscas"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <!--Cardview albanil -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAlbanil"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/card_view_marginTop"
        android:background="@color/white"
        android:elevation="@dimen/card_view_elevation"
        app:cardCornerRadius="@dimen/card_view_corner_radius">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/albanil"
                android:alpha=".45"/> <!-- background albanil-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/albanil"
                android:layout_gravity="center"
                android:textColor="#514B63"
                android:textStyle="bold"
                android:textSize="@dimen/card_view_main_text_size"/>
    </androidx.cardview.widget.CardView>

    <!--Cardview plomero -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvPlomero"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/card_view_marginTop"
        android:background="@color/white"
        android:elevation="@dimen/card_view_elevation"
        app:cardCornerRadius="@dimen/card_view_corner_radius">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/plomero"
            android:alpha=".45"/> <!-- background plomero-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plomero"
            android:layout_gravity="center"
            android:textColor="#514B63"
            android:textStyle="bold"
            android:textSize="@dimen/card_view_main_text_size"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>